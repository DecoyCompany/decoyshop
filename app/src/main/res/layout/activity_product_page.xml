<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ProductPageActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Ürün Resmi (ViewPager) -->

            <!-- Sol Ok -->

            <!-- Sağ Ok -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/left_arrow"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignBottom="@id/product_image_pager"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="95dp"
                    android:contentDescription="@string/left_arrow"
                    android:layout_marginBottom="58dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/baseline_arrow_left_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/product_image_pager"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/right_arrow"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignBottom="@id/product_image_pager"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="95dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/right_arrow"
                    android:layout_marginBottom="58dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/baseline_arrow_right_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/product_image_pager"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/product_image_pager"
                    android:layout_width="314dp"
                    android:layout_height="148dp"
                    android:layout_marginTop="29dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/right_arrow"
                    app:layout_constraintStart_toEndOf="@+id/left_arrow"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Ürün Başlığı -->

            <RatingBar
                android:id="@+id/ratingBar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/product_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ürün Başlığı"
                android:textColor="@color/textColorWhite"
                android:textSize="35sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/product_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ürün Açıklaması"
                    android:textColor="@color/orange_400"
                    android:textSize="18sp" />

            </ScrollView>

            <!-- Ürün Fiyatı -->
            <TextView
                android:id="@+id/product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ürün Fiyatı"
                android:textSize="18sp"
                android:textColor="@color/orange_400"
                android:layout_marginTop="8dp" />

            <!-- Sepete Ekle Butonu -->
            <Button
                android:id="@+id/add_to_cart_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sepete Ekle"
                android:textStyle="bold"
                android:backgroundTint="@color/orange_400"
                android:layout_marginTop="1dp" />


            <!-- Yorumlar Başlığı -->
            <TextView
                android:id="@+id/reviews_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yorumlar"
                android:textColor="@color/textColorWhite"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:paddingBottom="8dp" />

            <!-- Yorumlar Listesi (RecyclerView) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reviews_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:scrollbars="vertical" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>